    "module": "commonjs",
    "importHelpers": true,
    "allowJs": true,
    "outDir": "./dist",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "types": ["node"],
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "app",
