<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="view.Controller" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <SplitPane dividerPositions="0.6" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <items>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
              <items>
              <ScrollPane prefHeight="-1.0" prefWidth="-1.0">
                     <content>
                        <ListView fx:id="song_list" prefHeight="544.0" prefWidth="533.0" />
                     </content>
              </ScrollPane>
                  <Button fx:id="new_song" mnemonicParsing="false" text="New Song" />
              </items>
            </SplitPane>
        <AnchorPane>
               <children>
                  <Label text="Title" />
                  <Label layoutY="30.0" text="Artist" />
                  <Label layoutY="66.0" text="Album" />
                  <Label layoutY="98.0" text="Year" />
                  <TextField fx:id="selected_title_field" layoutX="54.0" layoutY="1.0" />
                  <TextField fx:id="selected_artist_field" layoutX="54.0" layoutY="39.0" />
                  <TextField fx:id="selected_album_field" layoutX="54.0" layoutY="75.0" />
                  <TextField fx:id="selected_year_field" layoutX="54.0" layoutY="115.0" />
                  <Button fx:id="save_song" layoutX="148.0" layoutY="544.0" mnemonicParsing="false" text="Save Changes" />
               </children>
        </AnchorPane>
      </items>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="900.0" spacing="5.0" VBox.vgrow="NEVER">
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
